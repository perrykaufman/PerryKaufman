@import 'palette'

/* block colors */
content-code-color = gray-color
content-table-color-1 = gray-color-light
content-table-color-2 = gray-color

/* font colors */
content-anchor-color = secondary-color
content-anchor-color-hover = secondary-color-dark
content-heading-color-1 = black-color
content-heading-color-2 = primary-color-dark
content-heading-color-3 = primary-color-darker
content-table-header-color = secondary-color-dark
content-list-color = secondary-color-darker

/* fonts */
content-code-font = mono-font

/* main */
.main-wrapper
  align-items center
  display flex
  flex-flow column nowrap
  min-height 'calc(100vh - %s)' % header-height
  position relative

.main
  flex 1 0 auto
  max-width 950px
  transition all .25s ease-in-out
  width 100%

/* content */
.content
  font-size 1rem
  margin auto
  padding 5px 15px
  width 100%

  h1
    color content-heading-color-1
    font-size 2.2em
    margin 0 0 20px 0

  h2
    border-bottom 1px solid gray-color
    color content-heading-color-2
    font-size 1.6em
    margin 0 0 5px 0

  h3
    color content-heading-color-3
    font-size 1.2em
    margin 0 0 2px 0

  h4
    color secondary-color-dark
    font-size 1em
    margin 0

  h5
    font-size 1em
    margin 0

  .content h6
    font-size 1em
    margin 0

  p
    margin 0 0 5px 0;
    code
      display inline-block
      padding 0 3px
      vertical-align bottom

  a
    color content-anchor-color
    &:hover
      color content-anchor-color-hover
      text-decoration none

  b
  strong
    font-weight 600

  blockquote
    font-style italic

  img
    display block
    margin auto
    max-width 100%

  code
    background content-code-color
    border-radius 5px
    display block
    font-family content-code-font, monospace
    overflow-x auto
    max-width 100%
    padding 10px
    white-space nowrap

  ol
  ul
    list-style none
    margin 0 0 10px 0
    padding 0 0 0 25px
  
  ul>li
    position relative
    &::before
      color: content-list-color
      content: 'â— '
      left -1em
      position absolute
      width 1em

  ol
    counter-reset: list
    >li::before
      color content-list-color
      content counter(list) '. ' 
      counter-increment list
      font-weight bold

  table
    border-collapse collapse

  th
    background-color white-color
    color content-table-header-color
    font-size 1.2em
    text-align left

  tr
    background-color content-table-color-1
    &:nth-of-type(even)
      background-color content-table-color-2

  td
  th
    padding 5px
    vertical-align top

/* media */
@media all and (min-width 1200px)  
  .main
    width 'calc(100% - %s)' % sidebar-static-width
    margin-left sidebar-static-width
  
  .no-sidebar
    .main
      margin-left 0